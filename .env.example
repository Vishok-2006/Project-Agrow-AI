# Agrow AI - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ============================================
# OPENAI API CONFIGURATION
# ============================================
VITE_OPENAI_API_KEY=sk-your_openai_api_key_here
VITE_OPENAI_MODEL=gpt-4o-mini
VITE_OPENAI_MAX_TOKENS=1000
VITE_OPENAI_TEMPERATURE=0.7

# ============================================
# BACKEND API CONFIGURATION
# ============================================
VITE_BACKEND_URL=http://localhost:5000
VITE_API_AUTH_LOGIN=/auth/login
VITE_API_AUTH_REGISTER=/auth/register
VITE_API_OPENAI_CHAT=/api/openai/chat
VITE_API_WEATHER=/api/weather
VITE_API_HEALTH=/health

# ============================================
# WEATHER API CONFIGURATION
# ============================================
VITE_WEATHER_API_KEY=your_openweathermap_api_key_here
VITE_DEFAULT_LATITUDE=10.96
VITE_DEFAULT_LONGITUDE=78.08

# ============================================
# APPLICATION CONFIGURATION
# ============================================
VITE_APP_NAME=Agrow AI
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Intelligent Farming Assistant
VITE_USER_EMAIL=your_email@example.com

# ============================================
# FEATURE FLAGS
# ============================================
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_WEATHER=true
VITE_ENABLE_CROP_PREDICTION=false
VITE_ENABLE_CROP_ANALYSIS=false
VITE_ENABLE_KNOWLEDGE_LIBRARY=true

# ============================================
# SECURITY CONFIGURATION
# ============================================
JWT_SECRET=your_jwt_secret_key_here_change_in_production
VITE_SESSION_TIMEOUT=3600000
VITE_TOKEN_EXPIRY=86400000

# ============================================
# DEVELOPMENT CONFIGURATION
# ============================================
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# ============================================
# PRODUCTION CONFIGURATION
# ============================================
VITE_IS_PRODUCTION=false
VITE_PRODUCTION_BACKEND_URL=https://your-production-domain.com

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=
